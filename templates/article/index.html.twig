{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between">
        <h1>Liste des articles</h1>
        <a href="{{ path('app_article_new') }}" class="btn btn-primary">Ajouter un article</a>
    </div>

    <div>
        <ul class="list-group list-group-flush">

            {% for article in articles %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ article.title }}
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a href="{{ path('app_article_show', {'slug': article.slug}) }}" class="btn btn-outline-success">Voir</a>
                        <a href="{{ path('app_article_edit', {'slug': article.slug}) }}" class="btn btn-outline-warning">Modifier</a>
                        {{ include('article/_delete_form.html.twig') }}
                    </div>
                </li>

            {% else %}
                Il n'y a aucun article post√©
            {% endfor %}

        </ul>
    </div>

{% endblock %}
