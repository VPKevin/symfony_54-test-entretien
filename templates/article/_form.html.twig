{{ form_start(form) }}

    {% if form.vars.name == "add" %}
        <div class="mb-3 row">
            <label for="title" class="col-sm-2 col-form-label">Titre</label>
            <div class="col-sm-10">
                <input type="text" required class="form-control" id="title" name="{{ form.title.vars.full_name }}" value="{{ form.title.vars.value }}">
            </div>
        </div>
        {% do form_widget(form.title) %}

        <div class="mb-3 row">
            <label for="photoFile" class="col-sm-2 form-label">Photo</label>
            <div class="col-sm-10">
                <input class="form-control" type="file" id="photoFile" name="{{ form.photoFile.file.vars.full_name }}">
            </div>
        </div>
        {% do form_widget(form.photoFile) %}

    {% endif %}

    <div class="mb-3 row">
        <label for="introduction" class="col-sm-2 col-form-label">Introduction</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="introduction" name="{{ form.introduction.vars.full_name }}" value="{{ form.introduction.vars.value }}">
        </div>
    </div>
    {% do form_widget(form.introduction) %}

    <div class="mb-3 row">
        <label for="content" class="col-sm-2 form-label">Contenu</label>
        <div class="col-sm-10">
            <textarea class=" form-control" required id="content" rows="3" name="{{ form.content.vars.full_name }}">{{ form.content.vars.value }}</textarea>
        </div>
    </div>
    {% do form_widget(form.content) %}

    {{ form_widget(form) }}
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
